{
  "name": "Delocalizer",
  "description": "__MSG_extDescription__",
  "version": "0.0.1",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "manifest_version": 3,

  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "action": {
    "default_icon": "icons/128.png",
    "default_popup": "popup.html",
    "browser_style": true
  },

  "default_locale": "en"
}
